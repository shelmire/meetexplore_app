<% provide(:title, @user.display_name) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>
      <%= @user.display_name %>
    </h1><% if @user == current_user %>
    <p align="center">THIS IS YOU<br><%= link_to "Edit Profile", edit_user_path(@user) %> <% end %><br>
    <p>Real name: <%= @user.name %>
    <p>Sex: <%= @user.sex %>
    <p>DOB: <%= @user.birthday %>
    <p>Zip: <% @user.zip_code %>
    <p>About Me: <%= @user.content %>
  </div>
</div>


<div class="row">
<div class="col-md-6 col-md-offset-3">
<% if user_signed_in? %>
<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control'  %>
  <%= f.label :sex %><br />
  <%= f.text_field :sex, class: 'form-control'  %>
  <%= f.label :birthday %><br />
  <%= f.date_field :birthday, class: 'form-control'  %>
  <%= f.label :zip_code %><br />
  <%= f.text_field :zip_code, class: 'form-control'  %>
  <%= f.label :content %><br />
  <%= f.text_field :content, class: 'form-control'  %>
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
<% end %>